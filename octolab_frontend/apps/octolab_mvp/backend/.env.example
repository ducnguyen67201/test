# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/octolab

# Application
APP_NAME=OctoLab
APP_VERSION=0.1.0
APP_ENV=dev

# Logging
LOG_LEVEL=INFO

# JWT Authentication (required)
SECRET_KEY=your-secret-key-change-in-production

# HackVM Directory (required for compose runtime)
HACKVM_DIR=/path/to/octolab-hackvm

# Evidence Sealing (required in production)
# EVIDENCE_HMAC_SECRET=your-hmac-secret

# =============================================================================
# Internal API (Service-to-Service Communication)
# =============================================================================
# Token for internal API endpoints (e.g., Falco ingestion)
# SECURITY: Required in production; generate securely, never log
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# INTERNAL_TOKEN=your-internal-token

# Falco Ingestion Settings (optional, defaults shown)
# FALCO_RATE_LIMIT_PER_LAB=100
# FALCO_DEDUP_TTL_SECONDS=60
# FALCO_MAX_BATCH_SIZE=100

# =============================================================================
# Apache Guacamole Configuration
# =============================================================================
# Enable Guacamole integration (default: false)
GUAC_ENABLED=false

# Guacamole web UI base URL
GUAC_BASE_URL=http://127.0.0.1:8081/guacamole

# Guacamole admin credentials for API access
GUAC_ADMIN_USER=guacadmin
GUAC_ADMIN_PASSWORD=guacadmin

# Fernet encryption key for per-lab passwords (required when GUAC_ENABLED=true)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# GUAC_ENC_KEY=your-32-byte-base64-key

# guacd container name (for network connect/disconnect)
GUACD_CONTAINER_NAME=octolab-guacd
